{
  "manifest_version": 3,
  "name": "MIA",
  "version": "1.0.0",
  "description": "Minute Intelligent Assistant",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "MIA"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assests/content.js"],
      "css": ["assests/content.css"]
    }
  ],
  "background": {
    "service_worker": "assests/background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"]
}
